@page "/series/{seriesId:guid}/season/{seasonId:guid}"
@layout MainLayout

@if (Season is null)
{
    <LoadingComponent/>
}
else
{
    <span>
        @Season.Name
        @if (Season.ProductionYear is not null)
        {
            <span> - @Season.ProductionYear</span>
        }
    </span>

    <div>
        @if (Episodes.Count != 0)
        {
            <span>Episodes</span>
            foreach (var episode in Episodes)
            {
                <PrimaryCardComponent Item="episode"/>
            }
        }
    </div>
}

