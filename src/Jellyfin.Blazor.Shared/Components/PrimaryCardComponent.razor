<div class="flex-1 flex flex-col p-1 cursor-pointer" @onclick="ViewItem">
    <img class="w-32 flex-shrink-0 mx-auto bg-black" src="@_imageUrl" alt="">
    <h3 class="mt-1 text-sm font-medium truncate text-center">@(ShowParentName ? _title : _subTitle)</h3>
    @if (ShowParentName)
    {
        <div class="mt-1 flex-grow flex flex-col justify-between">
            <div class="text-gray-500 text-sm truncate text-center">
                <span>@_subTitle</span>
            </div>
        </div>
    }
</div>
