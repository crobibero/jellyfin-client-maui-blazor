@page "/login"
@attribute [AllowAnonymous]

<div class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">

        <div class="flex-shrink-0 flex items-center px-4 py-4">
            <img class="h-15 w-auto" src="images/jellyfin-banner-dark.svg" alt="Jellyfin"/>
        </div>

        <div class="bg-gray-50 py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <EditForm Model="@_loginPageModel" OnValidSubmit="@HandleLogin" class="space-y-6">
                <div>
                    <label for="host" class="block text-sm font-medium text-gray-700">
                        Server Address
                    </label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="mdi mdi-link h-5 w-5 text-gray-400"></span>
                        </div>
                        <input id="host"
                               type="text"
                               placeholder="Host"
                               @bind-value="_loginPageModel.Host"
                               class="appearance-none block w-full px-3 py-2 pl-10 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"/>
                    </div>
                </div>

                <div>
                    <label for="username" class="block text-sm font-medium text-gray-700">
                        Username
                    </label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="mdi mdi-account h-5 w-5 text-gray-400"></span>
                        </div>
                        <input id="username"
                               type="text"
                               placeholder="Username"
                               @bind-value="_loginPageModel.Username"
                               class="appearance-none block w-full px-3 py-2 pl-10 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"/>
                    </div>
                </div>

                <div>
                    <label for="password"
                           class="block text-sm font-medium text-gray-700">
                        Password
                    </label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="mdi mdi-lock h-5 w-5 text-gray-400"></span>
                        </div>
                        <input id="password"
                               type="password"
                               placeholder="Password"
                               @bind-value="_loginPageModel.Password"
                               class="appearance-none block w-full px-3 py-2 pl-10 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"/>
                    </div>
                </div>

                @*<div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input id="remember_me"
                               name="remember_me"
                               type="checkbox"
                               class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                        <label for="remember_me"
                               class="ml-2 block text-sm text-gray-900">
                            Remember me
                        </label>
                    </div>
                </div>*@

                <div>
                    <button type="submit"
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        @if (_loading)
                        {
                            <Wave class="sk-white"/>
                        }
                        else
                        {
                            <span>Sign in</span>
                        }

                    </button>
                </div>

                <div class="text-red-500 mt-6 w-full">
                    <div class="flex">
                        <ValidationSummary/>

                        @if (!string.IsNullOrEmpty(_error))
                        {
                            <span >@_error</span>
                        }
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>